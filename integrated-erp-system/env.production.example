# Production Environment Variables for Independent ERP System
# Copy this file to .env and update the values for your production environment

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Application Security
SECRET_KEY=your_super_secret_key_change_in_production_minimum_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production_minimum_32_characters

# AI/ML Configuration
AI_API_KEY=your_openai_api_key_here
AI_MODEL_PROVIDER=openai
AI_CONFIDENCE_THRESHOLD=0.8

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# Monitoring Configuration
GRAFANA_PASSWORD=your_grafana_admin_password
PROMETHEUS_RETENTION=30d
ELASTICSEARCH_HEAP_SIZE=1g

# Application Configuration
FLASK_ENV=production
DEBUG=false
LOG_LEVEL=INFO
MAX_CONTENT_LENGTH=100MB

# Database URLs
DATABASE_URL=postgresql://erp_user:${POSTGRES_PASSWORD}@postgres:5432/erp_system
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx

# Security Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# Logging Configuration
LOG_FILE=/app/logs/erp_system.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CACHE_DEFAULT_TIMEOUT=300

# Background Tasks Configuration
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/2
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/3

# WebSocket Configuration
WEBSOCKET_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
WEBSOCKET_PING_TIMEOUT=30
WEBSOCKET_PING_INTERVAL=25

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
